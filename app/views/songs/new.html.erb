<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.text_field :artist_name, list: "artists_autocomplete" %>
  <datalist id="artists_autocomplete">
    <% Artist.all.each do |category| %>
      <option value="<%= category.name %>">
    <% end %>
  </datalist>
  <br>
  <%= f.label :genre_name %>
  <%= f.collection_select :genre_name, Genre.all, :name, :name %>
  <br>
  <%= f.label "Notes" %>
  <%= f.text_area :notes_1 %>
  <%= f.text_area :notes_2 %>
  <%= f.submit %>
<% end %>


